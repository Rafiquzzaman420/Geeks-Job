<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QuestionAnsActivity"
    tools:ignore="NestedWeights"
    android:id="@+id/question_ans_drawer_layout"
    android:orientation="horizontal"
    tools:openDrawer="end"
    android:background="@drawable/color_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".60"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:translationZ="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/bannerAdView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-5052828179386026/8704516831">
                    </com.google.android.gms.ads.AdView>


                <TextView
                    android:id="@+id/topic_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".80"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:fontFamily="@font/geeks_job_medium"
                    android:gravity="center"
                    android:text="@string/topic_name"
                    android:textColor="#9a9a9a"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights">

                </TextView>


                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".35"
                    android:background="#9a9a9a"
                    android:elevation="5sp"
                    android:fontFamily="@font/geeks_job_medium"
                    android:gravity="center"
                    android:text="@string/questionVIew"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:padding="10dp">

                </TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".60"
            android:orientation="vertical">


            <Button
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight=".75"
                android:fontFamily="@font/geeks_job_medium"
                android:gravity="center"
                android:text="@string/answer_one"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/white.GeeksJob"
                android:elevation="5dp"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight=".75"
                android:elevation="5dp"
                android:translationZ="5dp"
                android:fontFamily="@font/geeks_job_medium"
                android:gravity="center"
                android:text="@string/answer_two"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/white.GeeksJob" />

            <Button
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight=".75"
                android:elevation="5dp"
                android:translationZ="5dp"
                android:fontFamily="@font/geeks_job_medium"
                android:gravity="center"
                android:text="@string/answer_three"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/white.GeeksJob" />


            <Button
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight=".75"
                android:elevation="5dp"
                android:translationZ="5dp"
                android:fontFamily="@font/geeks_job_medium"
                android:gravity="center"
                android:text="@string/answer_four"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/white.GeeksJob" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".84"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight=".4"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:fontFamily="@font/geeks_job_medium"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    tools:ignore="InefficientWeight,TouchTargetSizeCheck">

                </Button>


                <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rewardTimer"
                        android:visibility="gone"
                        android:layout_marginEnd="20dp"
                        android:text="@string/rewardTimer"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2.5dp"
                        android:textColor="@color/white"
                        android:gravity="center" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/leave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_weight=".66"
                    android:layout_marginEnd="2.5dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:fontFamily="@font/geeks_job_medium"
                    android:text="@string/leave"
                    android:textColor="@color/white"
                    android:textSize="28sp">

                </Button>

                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight=".80"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:gravity="center"
                    android:text="@string/initial_number"
                    android:textAppearance="@style/geeks_job_large"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/purple.GeeksJob" />

                <Button
                    android:id="@+id/rewardButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2.5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight=".66"
                    android:fontFamily="@font/geeks_job_medium"
                    android:gravity="center"
                    android:text="@string/reward_Button"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>